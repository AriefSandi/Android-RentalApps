            android:name=".admin.ActivityCreateMobil"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".admin.ActivityEditMobil"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".user.ActivityListTransaksi"
            android:label="List Mobil"
