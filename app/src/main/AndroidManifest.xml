        <activity
            android:name=".admin.ActivityDetailCars"
            android:screenOrientation="portrait"
            android:theme="@style/AppDetail" />
        <activity
            android:name=".user.ActivityDetailUserCars"
            android:screenOrientation="portrait"
            android:theme="@style/AppDetail" />
