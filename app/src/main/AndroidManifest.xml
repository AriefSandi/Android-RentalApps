            android:theme="@style/AppTheme" />
        <activity
            android:name=".admin.ActivityDetailListTransaksi"
            android:label="List Mobil"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".user.ActivityDetailListHistory"
            android:label="List Mobil"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
